{
  "extends": "@informerus/tsconfig/internal-package.json",
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "isolatedModules": false,
    "noEmit": false,
    "outDir": "dist",
    "tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json"
  },
  "include": ["*.ts", "src"],
  "exclude": ["node_modules", "dist"]
}
